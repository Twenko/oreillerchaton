<h1>Photos</h1>

		<div class="imageRow">
			<div class="set">
<% @pictures.each do |picture| %>
	<% if picture.activate %>
	<% if @counting==0 %><%= '<div class="single first">'%><% end %>
	<% if @counting==@pictures.length-1 %><%= '<div class="single last">'%><% end %>
	<% if ((@counting!=@pictures.length-1)&&(@counting%5!=0)) %><%= '<div class="single"> '%><% end %>
    <%=link_to (image_tag picture.path, :width => '200'), picture.path, :rel => 'lightbox[pics]', :title => picture.desc %>
    </div>
    <% @counting = @counting + 1 %>
    <% if @counting%5==0 %><%= '<br />' %><% end %>
    <% end %>
<% end %>

</div></div></div>

